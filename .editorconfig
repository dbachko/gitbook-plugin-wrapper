# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# Apiary blueprints
[*.apib]
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# Tab indentation for Makefile because make
[cms/Makefile]
indent_style = tab
